{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "InchBox",
  "identifier": "com.nayamior.inchbox",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "InchBox",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self' blob: data: filesystem: wss: https: tauri: 'unsafe-inline' 'unsafe-eval' asset: https://asset.localhost http://asset.localhost; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost http://asset.localhost blob: data:",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "wix": {
        "language": {
          "en-US": {
            "localePath": "./wix/locales/en-US.wxl"
          },
          "zh-CN": {
            "localePath": "./wix/locales/zh-CN.wxl"
          }
        }
      }
    },
    "icon": [
      "icons/icon.ico"
    ]
  }
}
