{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "alfred",
  "identifier": "com.nayamior.alfred",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "alfred",
        "width": 800,
        "height": 600,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "wix": {
        "language": {
          "en-US": {
            "localePath": "./wix/locales/en-US.wxl"
          },
          "zh-CN": {
            "localePath": "./wix/locales/zh-CN.wxl"
          }
        }
      }
    },
    "icon": [
      "icons/icon.ico"
    ]
  }
}
